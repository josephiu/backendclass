<!-- //contents -->
<% if (title) { %> 
    <h1><%= title %></h1> 
    <% } else {  
        res.redirect('/') 
       } %>  
     

    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>


    <%# grid %>

<div id="login-container">
<h3>Please Login with Your Email and Password</h3>
        <form id="login-form" action="/account/login" method="post">
            <label for="account_email"> Email:</label><br>
            <input type="email" id="email" name="account_email" placeholder="Enter your Email Address " required value="<%= locals.account_email %> "><br>

            <label for="account_password"> Password:</label><br>
            <input type="password" id="password" name="account_password" placeholder="Enter your Password" 
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required> <br>
                <span>Password must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character</span>
            
            
            <div class="wrap">
                <button id="login-button" type="submit" > Login </button>
            </div>
        </form>
        <p>Not registered?
            <a href="/account/register" style="text-decoration: none;"> Create an account</a>
        </p>
    </div>
</div>


   